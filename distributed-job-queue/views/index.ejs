<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Distributed Queue</title>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-xl w-96 text-center">
        <h1 class="text-2xl font-bold mb-4 text-blue-600">Task Producer</h1>
        <p class="text-gray-500 mb-6">Queue a "heavy" email task.</p>
        
        <input id="email" type="email" placeholder="Enter Email" class="w-full p-2 border rounded mb-4 outline-none focus:ring-2 focus:ring-blue-400">
        
        <button onclick="sendTask()" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition w-full">
            Generate Job
        </button>

        <div id="status" class="mt-4 text-sm font-mono text-green-600 hidden">
            Job added to queue!
        </div>
    </div>

    <script>
        async function sendTask() {
            const email = document.getElementById('email').value;
            const res = await fetch('/send-email', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, subject: "Hello from BullMQ" })
            });
            const data = await res.json();
            if(data.success) {
                document.getElementById('status').classList.remove('hidden');
                document.getElementById('status').innerText = `Job ID: ${data.jobId} is in Queue`;
            }
        }
    </script>
</body>
</html>